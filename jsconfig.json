{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": false,
		"sourceMap": true,
		"strict": false,
		"baseUrl": ".",
		"paths": {
			"$lib":["./src/lib"],
			"$lib/*":["./src/lib/*"],
			"$layout/*": ["./src/lib/layout/*", "./src/lib/layout" ],
			"$components/*": ["./src/lib/components/*", "./src/lib/components" ],
		}
	},
}